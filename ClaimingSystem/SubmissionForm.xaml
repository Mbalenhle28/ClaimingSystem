<Window x:Class="ClaimingSystem.SubmissionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claim Submission" Height="300" Width="400">
	<Grid>
		<StackPanel Margin="20">
			<TextBlock Text="Hours Worked:"/>
			<TextBox Name="HoursWorkedTextBox" Margin="0,5,0,10"/>

			<TextBlock Text="Hours Raised:"/>
			<TextBox Name="HoursRaisedTextBox" Margin="0,5,0,10"/>

			<TextBlock Text="Additional Notes:"/>
			<TextBox Name="AdditionalNotesTextBox" Margin="0,5,0,10" AcceptsReturn="True" Height="60"/>

			<Button Content="Upload Document" Click="UploadDocument_Click" Margin="0,10,0,0"/>
			<TextBlock Name="UploadedFileName" Margin="0,5,0,10" Foreground="Green"/>

			<Button Content="Submit Claim" Click="SubmitClaim_Click" Margin="0,10,0,0"/>
		</StackPanel>
	</Grid>
</Window>
